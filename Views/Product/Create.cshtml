@model Demo_Code_First.Models.Product
<div class="row justify-content-center">
    <div class="col-md-8 mx-auto rounded border p-4 shadow-sm">
        <h2 class="text-center mb-4">New Product</h2>

        <form method="post" asp-controller="Product" asp-action="Create" enctype="multipart/form-data">
            <!-- Product Name -->
            <div class="mb-4">
                <label for="productName" class="form-label">Name</label>
                <input id="productName" class="form-control" asp-for="productName" placeholder="Enter product name" />
                <span asp-validation-for="productName" class="text-danger"></span>
            </div>

            <!-- Product Price -->
            <div class="mb-4">
                <label for="Price" class="form-label">Price</label>
                <input id="Price" class="form-control" asp-for="Price" placeholder="Enter price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Product Quantity -->
            <div class="mb-4">
                <label for="Quantity" class="form-label">Quantity</label>
                <input id="Quantity" class="form-control" asp-for="Quantity" placeholder="Enter quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Product Description -->
            <div class="mb-4">
                <label for="Description" class="form-label">Description</label>
                <textarea id="Description" class="form-control" asp-for="Description" placeholder="Enter product description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <input type="file" name="images" multiple />
            </div>

            <!-- Product Category -->
            <div class="mb-4">
                <label for="category" class="form-label">Category</label>
                <select id="category" class="form-control" asp-for="categoryid" asp-items="ViewBag.Categories">
                    <option>-- Select Category --</option>
                </select>

                <span asp-validation-for="category" class="text-danger"></span>
            </div>

            <!-- Form Actions -->
            <div class="row">
                <div class="col-sm-6 mb-3">
                    <button type="submit" class="btn btn-primary w-100 btn-lg">Save</button>
                </div>
                <div class="col-sm-6">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100 btn-lg">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

